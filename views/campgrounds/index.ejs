<% include ../partials/header %>

<div class="container">	
<header class="jumbotron">
	<div class="container">
	<h1>Welcome to YelpCamp!</h1>
	<p>
	<a class="btn btn-primary btn-large" href="/campgrounds/new">Add a new campground!</a>
	</p>	
	</div>	
</header>

<div class="row text-center">	
	<% campgrounds.forEach(function(campgrounds){ %>
	<div class="col-md-3 col-sm-6">
		<div class="thumbnail">
			<img src="<%=campgrounds.image%>">
			<div class="caption">
					<h4><%= campgrounds.name %></h4>
			</div>
			<p>
				<a class="btn btn-primary" href="/campgrounds/<%= campgrounds._id%>">More info!</a>
			</p>
		</div>
	</div>
	<% }) %>
</div>

<a href="/">Go back to homepage</a>

</div>

<% include ../partials/footer %>
